@{
  ViewBag.Title = "New";
}


<div id="containershow">
  <nav>
    <a class="navlink" href="/Teacher/List">Back To Teachers</a>
  </nav>
  <h2>New Author</h2>
  <form method="POST" action="/Teacher/Create">
    <div class="inputrow">
      <label for="TeacherFname">First Name:</label>
      <input type="text" id="TeacherFname" name="TeacherFname" class="black"/>

    </div>
    <div class="inputrow">
      <label for="TeacherLname">Last Name:</label>
      <input type="text" id="TeacherLname" name="TeacherLname" class="black"/>

    </div>
    <div class="inputrow">
      <label for="EmployeeNumber">Employee Number:</label>
      <input type="text" id="EmployeeNumber" name="EmployeeNumber" class="black"/>
    </div>
    <div class="inputrow">
      <label for="Salary">Salary:</label>
      <input type="text" id="Salary" name="Salary" class="black"/>
    </div>
    <div>
      <input type="submit" class="addbutton" value="Create Author" />
    </div>
  </form>
</div>

